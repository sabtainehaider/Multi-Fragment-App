<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="10dp"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:ellipsize="start"
        android:singleLine="true" />

   
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button style="@style/FuncButton" android:id="@+id/btnSin" android:text="sin" />
            <Button style="@style/FuncButton" android:id="@+id/btnCos" android:text="cos" />
            <Button style="@style/FuncButton" android:id="@+id/btnTan" android:text="tan" />
            <Button style="@style/FuncButton" android:id="@+id/btnLog" android:text="log" />
            <Button style="@style/FuncButton" android:id="@+id/btnLn" android:text="ln" />
            <Button style="@style/FuncButton" android:id="@+id/btnSqrt" android:text="√" />
            <Button style="@style/FuncButton" android:id="@+id/btnPow" android:text="xʸ" />
            <Button style="@style/FuncButton" android:id="@+id/btnFact" android:text="n!" />
        </LinearLayout>
    </HorizontalScrollView>

 
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button style="@style/FuncButton" android:id="@+id/btnAC" android:text="AC" />
        <Button style="@style/FuncButton" android:id="@+id/btnPlusMinus" android:text="+/−" />
        <Button style="@style/FuncButton" android:id="@+id/btnPercent" android:text="%" />
        <Button style="@style/OpButton" android:id="@+id/btnDivide" android:text="÷" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button style="@style/NumButton" android:id="@+id/btn7" android:text="7" />
        <Button style="@style/NumButton" android:id="@+id/btn8" android:text="8" />
        <Button style="@style/NumButton" android:id="@+id/btn9" android:text="9" />
        <Button style="@style/OpButton" android:id="@+id/btnMultiply" android:text="×" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button style="@style/NumButton" android:id="@+id/btn4" android:text="4" />
        <Button style="@style/NumButton" android:id="@+id/btn5" android:text="5" />
        <Button style="@style/NumButton" android:id="@+id/btn6" android:text="6" />
        <Button style="@style/OpButton" android:id="@+id/btnMinus" android:text="−" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button style="@style/NumButton" android:id="@+id/btn1" android:text="1" />
        <Button style="@style/NumButton" android:id="@+id/btn2" android:text="2" />
        <Button style="@style/NumButton" android:id="@+id/btn3" android:text="3" />
        <Button style="@style/OpButton" android:id="@+id/btnPlus" android:text="+" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button
            style="@style/NumButton"
            android:id="@+id/btn0"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:text="0" />

        <Button style="@style/NumButton" android:id="@+id/btnDot" android:text="." />
        <Button style="@style/OpButton" android:id="@+id/btnEqual" android:text="=" />
    </LinearLayout>
</LinearLayout>
